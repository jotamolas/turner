
{% extends 'base.html.twig' %}


{% block stylesheets %}

    <style>
        body{
            background: #fff url({{ asset('bundles/app/images/bg-site.png') }});

        }
        .row{
            background: #fff;
            margin-top: 25px;
            margin-bottom: 25px;
        }

        .dashboard-header{
            margin-bottom: 50px;
            margin-top: 25px;
            padding: 20px;
            border: solid 2px #b3bac2;
            border-radius: 10px;        
        }

        .position-selection{
            padding: 20px;
            border: solid 2px #b3bac2;
            border-radius: 10px;
        }
        .lv-index-panel{
            display: block;
            width: 275px;
            height: 225px;
            margin: 10px;
            padding: 10px;
            border: #d3d3d3 1px solid;
            -webkit-box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.15);
            box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.15);
            background-color: #fafafa;
            color: #000 !important; 
            text-align: center;
        }

        .lv-tile-meta {
            text-align: center;
            opacity: 0.70;
            -webkit-box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0);
            box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0);
        }

        .lv-tile-inner {
            width: 275px;
            height: 225px;
            transform-origin: 0 0;
            -moz-transform-origin: 0 0;
            -ms-transform-origin: 0 0;
            -o-transform-origin: 0 0;
            -webkit-transform-origin: 0 0;
        }

        .lv-plus {
            font-size: 70px;
            line-height: 140px;
            padding: 20px 0px 0px 0px;
            position: relative;
            top: -6px;
            color: #00000;
        }

        .lv-plus-subtitle {
            position: relative;
            top: -1px;
            color: #00000;
            text-align: center;

            font-weight: 800;
        }

        .lv-meta-subtitle {
            font-size: 25px;
        }

        #lv-position:hover {           
            opacity: 1.0;
            text-decoration: none;
        }

        .rounded{
            border: 4px solid #AAA;
            border-radius: 35px;
            padding: 10px;
        }    
    </style>
{% endblock %}


{% block body %}

    <div class="container">

        <div class="row dashboard-header">
            <div class="col">
                <h1 class="display-4">Hola {{app.user.name}} </h1>
                <p class="lead">Seleccione una posición para iniciar sesión. Gracias</p>
            </div>
        </div>


        {% for position in positions%}
            {% if loop.index0 is divisibleby(3) %}
                <div class="row position-selection">
                {% endif %} 

                {% if position.isEnabled %}
                    <div class="col-md-4">
                        <a id="lv-position"
                           {% if position.state.description == 'busy' %}
                               href="#" 
                           {% else %}
                               href="{{ path('turn_manage_position_selection',{'position': position.id, 'agent': agent.id})}}" 
                           {% endif %}
                           class="lv-index-panel lv-tile-meta isotope-item" 
                           style="left: 0px; top: 0px; transform: translate3d(0px, 0px, 0px); width: 240px; height: 180px;
                           {% if position.state.description == 'busy' %}
                               background-color: #B2170E;
                               color: white !important;
                           {% else %}
                               background-color: #87FF8D;

                           {% endif %}
                           ">
                            <div class="lv-tile-inner" style="width: 265px; height: 224px; transform: scale(0.75);">
                                <div style="margin-bottom: 2px;"></div>
                                <div class="lv-plus lv-meta-symbol">{{position.name}}</div>        
                                <span class="lv-plus-subtitle lv-meta-subtitle text-bold">{{position.state.description}}</span>
                            </div>
                        </a>
                    </div>
                {% endif %}
                {% if loop.index is divisibleby(3) or loop.last %}
                </div>
            {% endif %}
        {% endfor %}

    </div>
{% endblock%}



